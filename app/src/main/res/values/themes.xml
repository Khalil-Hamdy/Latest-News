<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LatestNews" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>

        <!-- System UI Configurations-->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true
        </item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item>  <!-- For making Navigation bar content color dark -->
    </style>

    <style name="CircleImageView" parent="Base.Theme.LatestNews">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.LatestNews" parent="Base.Theme.LatestNews" />
</resources>